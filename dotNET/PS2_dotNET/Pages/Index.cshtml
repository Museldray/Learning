@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome User</h1>
    <form method="post">
        <div class="form-row">
            <div class="col">
                <label asp-for="Address.Street">Ulica:</label><br />
                <input asp-for="Address.Street" class="form-control" placeholder="Wpisz tutaj" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.Number">Numer:</label><br />
                <input asp-for="Address.Number" class="form-control" placeholder="Wpisz tutaj" />
                <span asp-validation-for="Address.Number" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.ZipCode">Kod pocztowy:</label><br />
                <input asp-for="Address.ZipCode" class="form-control" placeholder="Wpisz tutaj" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="Address.City">Miasto:</label><br />
                <input asp-for="Address.City" class="form-control"placeholder="Wpisz tutaj" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Zatwierdź</button>
        </div>
    </form>
</div>
