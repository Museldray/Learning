@page
@model FizzBuzz_dotNET.Pages.Fizzbuzzes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FizzBuzz.Take(20))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                    |
                    @User.Identity.Name
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    @if(User.Identity.Name == item.Email)
                    {
                        <b> | </b>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> <b> | </b>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
